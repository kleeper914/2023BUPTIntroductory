/**index.wxss**/
.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.input-container {
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 50rpx;
  text-align: center;
}

.input {
  width: 500rpx;
  height: 50rpx;
  font-size: 24rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  padding: 10rpx;
}

.countdown-container {
  margin-bottom: 80rpx;
  margin-top: -100rpx;
}

.countdown {
  font-size: 60rpx;
  text-align: center;
}

.button-container {
  display: flex;
  flex-direction: column;
}


.button {
  width: 400rpx;
  height: 80rpx;
  font-size: 28rpx;
  background-color: #007AFF;
  color: #fff;
  border-radius: 5rpx;
  border: none;
  outline: none;
  text-align: center;
  line-height: 80rpx;
  margin-bottom: 10rpx;
}